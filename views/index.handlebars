<h1>Eat Da Burger!</h1>

<h2>Burger Just Created!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devoured=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devoured=false}}
  {{/if}}
  {{/each}}
</ul>

<h2>Create a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="burger_name">Burger Name:</label>
    <input type="text" id="burger_name" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Sleepy?</label><br>
    <input type="radio" name="devoured" value="1" id="devoured" checked> Sleepy!<br>
    <input type="radio" name="devoured" value="0" id="newDevoured"> Awake
  </div>

  <button type="submit">Create Burger</button>
</form>