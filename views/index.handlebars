<h1>Eat Da Burger!</h1>

<h2>Burgers Made!</h2>

<ul>
  {{#each burger}}
  {{#unless devour}}
  {{> burger/burger-block devour=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burger}}
  {{#if devour}}
  {{> burger/burger-block devour=false}}
  {{/if}}
  {{/each}}
</ul>

<h2>Create a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Devour</label><br>
    <input type="radio" name="sleepy" value="1" id="sleepy" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0" id="awake"> Awake
  </div>

  <button type="submit">Create A Burger</button>
</form>
